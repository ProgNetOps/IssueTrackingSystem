@model IEnumerable<NetworkSwitchDTO?>

<section>

	<h1 class="m-3 mainHeader">SWITCHES</h1>

    <table class="table table-striped table-dark d-none d-md-block  no-italics" style="max-width:100%">

        <thead>
            <tr>
                <th class="text-center " style="width:10%">S/N</th>
                <th class="text-center " style="width:30%">
                    <a class="text-white" asp-action="index">SWITCH NAME</a>
                </th>
                <th class="text-center" style="width:15%">
                    <a class="text-white" asp-action="index">IP PoP</a>
                </th>
                <th class="text-center" style="width:25%">
                    <a class="text-white" asp-action="index">LAST BACKUP DATE</a>
                </th>
                <th class="text-center" style="width:20%">ACTION</th>
            </tr>
        </thead>

        <tbody>
            @{
                int counter = 0;
            }
            @foreach (var item in Model)
            {
                counter = counter + 1;
                <tr>
                    <td style="width:10%;" class="text-left text-white">@counter</td>
                    <td style="width:30%;" class="text-center text-warning">@item?.SwitchName</td>
                    <td style="width:15%;" class="text-center text-warning"> @item?.IPPoP.BTS.BTSName </td>
                    <td style="width:25%;" class="text-center text-warning"> @item?.DateOfLastBackup </td>
                    <td style="width:20%; font-size: 2em;">
                        <div class="bts-action-buttons" style="display:flex; justify-content:space-around; align-items:center;">
                            <a asp-controller="NetworkSwitch" asp-action="Edit" class="text-primary bts-icon-button"><i class="bi bi-pencil-square"></i></a>
                            <a style="text-decoration:none;cursor:pointer;color:#fff;" asp-controller="NetworkSwitch" asp-action="Details" asp-route-id="@item?.Id"><i class="bi bi-eye-fill"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</section>