@model NetworkSwitchDTO


	<section>

    <input asp-for="@Model.Id" hidden />
    <h2 class="m-3 mainHeaderDetails">@Model.SwitchName</h2>

        <div class="form-group row m-2">
            <label asp-for="SwitchName" class="col-sm-4 col-form-label text-black"></label>
            <div class="col-sm-8">
                <input asp-for="SwitchName" readonly class="text-black form-control" />
            </div>
        </div>

        <div class="form-group row m-2">
            <label asp-for="DateOfLastBackup" class="col-sm-4 col-form-label text-black"></label>
            <div class="col-sm-8">
                <textarea asp-for="DateOfLastBackup" readonly class="text-black form-control"></textarea>
            </div>
        </div>

        <div class="form-group row m-2">
            <label asp-for="SwitchIP" class="col-sm-4 col-form-label text-black"></label>
            <div class="col-sm-8">
                <textarea asp-for="SwitchIP" readonly class="text-black form-control"></textarea>
            </div>
        </div>

        <div class="bg-black p-3 h5 text-white">
            <h2 class="secondaryHeader  m-3">Config</h2>
            <div class="form-group row m-2">
                <div class="col">
                    <textarea asp-for="ConfigBackup" readonly class="text-black form-control"></textarea>
                </div>
            </div>
        </div>

	</section>