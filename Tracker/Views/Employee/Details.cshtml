@model Employee

@{
    string photoPath = "~/images/" + (Model.PhotoPath ?? "NoImage.jpg");
}

<section>	
    <input asp-for="@Model.Id" hidden />
	<h2 class="m-3 secondaryHeader">@Model.SurName @Model.FirstName</h2>



    <div class="form-group row m-2">
        <label asp-for="PhotoPath" class="col-sm-4 col-form-label text-black"></label>
        <div class="col-sm-8">
            <img src="@photoPath" style="width:100%; height:auto;" asp-append-version="true"/>
        </div>
    </div>

    <div class="form-group row text-center m-3">
        <div class=" col-4 offset-4">
            <a class="btn btn-warning" asp-controller="Employee" asp-action="Index">Back To Employees</a>
        </div>
    </div>

</section>