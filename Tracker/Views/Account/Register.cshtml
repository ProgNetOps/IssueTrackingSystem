@model RegisterViewModel

<section class="p-5">


	<form enctype="multipart/form-data" asp-controller="Account" asp-action="Register" method="post" class="mt-3 p-3 text-black" style="border: 2px solid green; border-radius: 1rem;">

		<h1 class="m-3 mainHeaderDetails" >REGISTER</h1>

		<div class="form-group row m-2">
			<label asp-for="Email" class="col-sm-3 col-form-label"></label>
			<div class="col-sm-9">
				<input asp-for="Email" class="form-control" placeholder="Email"/>
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group row m-2">
			<label asp-for="Password" class="col-sm-3 col-form-label"></label>
			<div class="col-sm-9">
				<input asp-for="Password" class="form-control" placeholder="Password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group row m-2">
			<label asp-for="ConfirmPassword" class="col-sm-3 col-form-label"></label>
			<div class="col-sm-9">
				<input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
		</div>

