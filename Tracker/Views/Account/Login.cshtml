@model LoginViewModel


<section class="p-5">

	@* Just put method="post" in the form tag, no asp-controller and asp-action for returnUrl to not be null *@
	<form enctype="multipart/form-data" method="post" class="mt-3 p-3 text-black" style="border: 2px solid green; border-radius: 1rem;">

		<h1 class="m-3 mainHeaderDetails">lOGIN</h1>


		<div asp-validation-summary="ModelOnly" class="text-danger"></div>


		<div class="form-group row m-2">
			<label asp-for="Email" class="col-sm-3 col-form-label"></label>
			<div class="col-sm-9">
				<input asp-for="Email" class="form-control" placeholder="Email" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group row m-2">
			<label asp-for="Password" class="col-sm-3 col-form-label"></label>
			<div class="col-sm-9">
				<input asp-for="Password" class="form-control" placeholder="Password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group row m-2">
			<div class="checkbox">
				<label asp-for="RememberMe">
					<input asp-for="RememberMe"  />
					@Html.DisplayNameFor(m => m.RememberMe)
				</label>
				
			</div>
		</div>
		
		<div class="text-center mt-3">
			<button class="btn btn-primary" type="submit">Login</button>
		</div>
	</form>
</section>