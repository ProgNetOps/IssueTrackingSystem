@model IEnumerable<IdentityRole>
    

<section>

    <div class="text-center">
            <h1 class="mainHeaderDetails">All Roles</h1>
    </div>

    <div class="mt-3 p-3 text-black" style="border: 2px solid green; border-radius: 1rem;">
        

        @if (Model.Any())
        {
            <div>
                <a class="fixed-button" asp-controller="Administration" asp-action="CreateRole">
                    <i class="bi bi-plus"></i>
                </a>
            </div>

            foreach (var role in Model)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        Role Id: @role.Id
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@role.Name</h5>
                    </div>
                    <div class="card-footer">
                        <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                            <a class="btn btn-primary" asp-controller="Administration" asp-action="EditRole" asp-route-Id="@role.Id">Edit</a>

                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Are you sure you want to delete role : @role.Name')">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            }

        }
        else
        {
            <div class="card">
                <div class="card-header">
                    No roles created yet
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Use the button below to create a role
                    </h5>
                    <a class="btn btn-primary"
                       asp-controller="Administration" asp-action="CreateRole">
                        Create Role
                    </a>
                </div>
            </div>
        }
    </div>



</section>