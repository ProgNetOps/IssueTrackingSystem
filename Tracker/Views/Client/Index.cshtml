@model IEnumerable<Client>


<section>

    <form method="get" asp-action="index">

        <h1 id="mainHeader" class="m-3 text-center">CLIENTS</h1>

        <table class="table table-striped table-dark d-none d-md-block" style="max-width:100%">
            <thead>
                <tr>
                    <th class="text-center " style="width:15%">
                        <a class="text-white" asp-action="index">CLIENT REFERENCE</a>
                    </th>
                    <th class="text-center" style="width:15%">
                        <a class="text-white" asp-action="index">CLIENT NAME</a>
                    </th>
                    <th class="text-center" style="width:20%">ACTION</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center text-warning">
                            <a style="text-decoration:none;cursor:pointer;color:#fff;" asp-controller="Client" asp-action="Details" asp-route-id="@item?.Id">@item?.ClientRef</a>
                        </td>
                        <td class="text-center text-warning"> @item?.ClientName</td>
                        
                    </tr>
                }
            </tbody>
        </table>

        <table class="table table-striped table-dark d-md-none" style="max-width:100%">
            <thead>
                <tr>
                    <th class="text-center" style="max-width:15%">
                        <a class="text-white" asp-action="index">CLIENT REF.</a>
                    </th>
                    <th class="text-center" style="max-width:75%">
                        <a class="text-white" asp-action="index">NAME</a>
                    </th>
                    <th class="text-center" style="max-width:10%">
                        <a class="text-white" asp-action="index">ACTION</a>
                    </th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td class="text-center text-warning">@item?.ClientRef</td>
                        <td class="text-center text-warning">@item?.ClientName</td>
                         <td class="text-center">
                            <div class="text-center bts-action-buttons">
                                <a asp-controller="BTS" asp-action="Details" asp-route-id="@item?.Id" class="text-success bts-icon-button"> <i class="fas fa-eye"></i></a>
                            </div>
                        </td> 
                    </tr>
                }
            </tbody>
        </table>

        }

    </form>


</section>