@model ClientDTO

<section class="text-primary">
    <input asp-for="@Model.Id" hidden />

    <div class="form-group row m-2">
        <label asp-for="ClientRef" class="col-sm-4 col-form-label text-black">Client Reference Number</label>
        <div class="col-sm-8">
            <input asp-for="ClientRef" readonly class="text-black form-control" />
        </div>
    </div>
    
    <div class="form-group row m-2">
        <label asp-for="ClientName" class="col-sm-4 col-form-label text-black"></label>
        <div class="col-sm-8">
            <input asp-for="ClientName" readonly class="text-black form-control" />
        </div>
    </div>

    <hr class="m-3" />

    <h2 class="m-3 secondaryHeader" style="">@Model.ClientName LINKS</h2>
 
    <div class="row m-2">        
        <table class="table table-striped table-dark d-none d-md-block" style="max-width:100%">
            <thead>
                <tr>
                    <th class="text-center text-white" style="width:5%">S/N</th>
                    <th class="text-center " style="width:13%">
                        <a class="text-white">NAME</a>
                    </th>
                    <th class="text-center" style="width:15%">
                        <a class="text-white">ADDRESS</a>
                    </th>
                    <th class="text-center" style="width:8%">
                        <a class="text-white">STATE</a>
                    </th>
                    <th class="text-center" style="width:10%">
                        <a class="text-white">SERVICE</a>
                    </th>
                    <th class="text-center " style="width:6%">
                        <a class="text-white">BANDWIDTH</a>
                    </th>
                    <th class="text-center" style="width:10%">
                        <a class="text-white">PROJECTS MANAGER</a>
                    </th>
                    <th class="text-center " style="width:10%">
                        <a class="text-white">ACCOUNT MANAGER</a>
                    </th>
                    <th class="text-center" style="width:10%">
                        <a class="text-white">STATUS</a>
                    </th>
                    <th class="text-center" style="width:13%">ACTION</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int counter = 0;
                }
                @foreach (var item in Model.Circuits)
                {
                    counter = counter + 1;
                    <tr>
                        <td class="text-left text-warning" style="width:5%">@counter</td>
                        <td class="text-left text-warning" style="width:10%">@item?.CircuitName</td>
                        <td class="text-left text-warning" style="width:15%"> @item?.Address</td>
                        <td class="text-center text-warning" style="width:10%"> @item?.State?.StateName</td>
                        <td class="text-center text-warning" style="width:10%"> @item?.ServiceType</td>
                        <td class="text-center text-warning" style="width:10%"> @item?.Bandwidth</td>
                        <td class="text-center text-warning" style="width:10%"> @item?.ProjectManager</td>
                        <td class="text-center text-warning" style="width:10%"> @item?.AccountManager</td>
                        <td class="text-center text-warning" style="width:10%"> @item?.CircuitState</td>
                        <td style="width:10%; font-size: 1.4em;">
                            <div class="bts-action-buttons" style="display:flex; justify-content:space-around; align-items:center;">
                                <a asp-controller="Client" asp-action="Edit" class="text-primary bts-icon-button"><i class="bi bi-pencil-square"></i></a>
                                <a style="text-decoration:none;cursor:pointer;color:#fff;" asp-controller="Circuit" asp-action="Details" asp-route-id="@item?.Id"><i class="bi bi-eye-fill"></i></a>
                                <a style="text-decoration:none;cursor:pointer;color:#fff;" asp-controller="Circuit" asp-action="Details" asp-route-id="@item?.Id"><i class="bi bi-tools"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="form-group row text-center m-3">
        <div class=" col-4 offset-4">
            <a class="btn btn-warning" asp-controller="Client" asp-action="Index">Back To Clients</a>
        </div>
    </div>

    @await Html.PartialAsync("_EditPartialView","ClientDTO")


</section>