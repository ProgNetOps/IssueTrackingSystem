@model ClientDTO

<section>
    <input asp-for="@Model.Id" hidden />
    <h2 class="text-center m-3" id="mainHeader">Details for @Model.ClientName</h2>

    <div class="form-group row m-2">
        <label asp-for="ClientRef" class="col-sm-4 col-form-label text-white">Client Reference Number</label>
        <div class="col-sm-8">
            <input asp-for="ClientRef" readonly class=" form-control" />
        </div>
    </div>

    <div class="form-group row m-2">
        <label asp-for="ClientName" class="col-sm-4 col-form-label text-white"></label>
        <div class="col-sm-8">
            <input asp-for="ClientName" readonly class=" form-control" />
        </div>
    </div>

    <div>
        @* <label asp-for="Circuits" class="col-sm-4 col-form-label text-white"></label>
        <div class="col-sm-8">
            <input asp-for="ClientName" readonly class=" form-control" /> *@
        @foreach (var circuit in Model.Circuits)
        {
            <label class="col-sm-4 col-form-label text-white">Name</label>
            <div class="col-sm-8">
                <input readonly class=" form-control" value="@circuit.CircuitName"/>
            </div>
        }
    </div>
</section>