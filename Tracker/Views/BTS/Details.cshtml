@model BTSDTO

<section>
    <input asp-for="@Model.Id" hidden />
    <h2 class="text-center m-3" id="mainHeader">Details for @Model.BTSName</h2>

    <div class="form-group row m-2">
        <label asp-for="BTSName" class="col-sm-4 col-form-label text-white"></label>
        <div class="col-sm-8">
            <input asp-for="BTSName" readonly class=" form-control" />
        </div>
    </div>
    <div class="form-group row m-2">
        <label asp-for="LocationAddress" class="col-sm-4 col-form-label text-white"></label>
        <div class="col-sm-8">
            <textarea asp-for="LocationAddress" readonly class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group row m-2">

        <label class="col-sm-4 col-form-label text-white">State</label>
        <div class="col-sm-8">
            <input asp-for="State.StateName" class="form-control" readonly />
        </div>
    </div>
    <div class="form-group row m-2">

        <label class="col-sm-4 col-form-label text-white">Region/Zone</label>
        <div class="col-sm-8">
            <input asp-for="State.Region.RegionName" class="form-control" readonly placeholder="Region/Zone" />
        </div>
    </div>
    <div class="form-group row m-2">
        <label asp-for="Coordinates" class="col-sm-4 col-form-label text-white"></label>
        <div class="col-sm-8">
            <input asp-for="Coordinates" class=" form-control" readonly />
        </div>
    </div>

    <div class="form-group row text-center mt-5">
        <div class=" col-4 offset-4">
            <a class="btn btn-warning" asp-controller="BTS" asp-action="Index">Back</a>
        </div>
    </div>
</section>