@model IEnumerable<BTS>?;


<section>

    <form method="get" asp-action="index">          

        <h1 id="mainHeader" class="m-3 text-center">Base Stations</h1>

            <table class="table table-striped table-dark d-none d-md-block" style="max-width:100%">
                <thead>
                    <tr>
                        <th class="text-center " style="width:15%">
                            <a class="text-white" asp-action="index">BTS</a>
                    </th>
                    <th class="text-center" style="width:15%">
                        <a class="text-white" asp-action="index">STATE</a>
                    </th>
                    <th class="text-center" style="width:15%">
                        <a class="text-white" asp-action="index">REGION</a>
                    </th>
                        <th class="text-center" style="width:50%">
                            <a class="text-white" asp-action="index">ADDRESS</a>
                        </th>
                        <th class="text-center" style="width:20%">ACTION</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center text-warning">
                                <a style="text-decoration:none;cursor:pointer;color:#fff;" asp-controller="BTS" asp-action="Details" asp-route-id="@item?.Id">@item?.BTSName</a>
                        </td>
                        <td class="text-center text-warning"> @item?.State.StateName </td>
                        <td class="text-center text-warning"> @item?.State?.Region?.RegionName </td>
                            <td class="text-center text-warning">@item?.LocationAddress</td>
                            <td class="text-center">
                                <div class="text-center bts-action-buttons">
                                    <a asp-controller="BTS" asp-action="Edit" class="text-primary bts-icon-button"><i class="fas fa-edit"></i></a>
                                    <a asp-controller="BTS" asp-action="Delete" class="text-danger bts-icon-button"> <i class="fas fa-trash"></i></a>
                                </div>
                            </td> 
                        </tr>
                    }
                </tbody>
            </table>
 
            <table class="table table-striped table-dark d-md-none" style="max-width:100%">
                <thead>
                    <tr>
                        <th class="text-center" style="max-width:15%">
                            <a class="text-white" asp-action="index">BTS</a>
                        </th>
                        <th class="text-center" style="max-width:75%">
                            <a class="text-white" asp-action="index">ADDRESS</a>
                        </th>
                        <th class="text-center" style="max-width:10%">
                            <a class="text-white" asp-action="index">ACTION</a>
                        </th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td class="text-center text-warning">@item.BTSName</td>
                            <td class="text-center text-warning">@item.LocationAddress</td>
                            <td class="text-center">
                                <div class="text-center bts-action-buttons">
                                    <a asp-controller="BTS" asp-action="Details" asp-route-id="@item.Id" class="text-success bts-icon-button"> <i class="fas fa-eye"></i></a>
                                </div>
                            </td> 
                        </tr>
                    }
                </tbody>
            </table>
 
        }

    </form>


</section>